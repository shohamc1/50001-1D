<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:background="@color/paletteBlue"
    android:padding="50dp" >

    <ImageView
        android:id="@+id/happy_sushi"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:maxWidth="@android:dimen/app_icon_size"
        android:src="@drawable/happy_sushi" />

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/happy_sushi"
        android:layout_centerInParent="true"
        android:layout_marginTop="@android:dimen/thumbnail_height"
        android:text="Food Avenue"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:fontFamily="sans-serif-medium"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Get Started"
        android:background="@drawable/rounded_corners"/>


</RelativeLayout>